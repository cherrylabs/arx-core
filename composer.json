    "require": {
        "php": ">=5.5",
        "laravel/framework": "5.x",
        "laravelcollective/html": "5.*",
        "doctrine/dbal": "~2.3",
        "kriswallsmith/assetic" : "*",
        "filp/whoops" : "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "classmap": [
            "src/Arx/classes",
            "src/Arx/commands",
            "src/Arx/controllers",
            "src/Arx/facades",
            "src/Arx/helpers",
            "src/Arx/interfaces",
            "src/Arx/middlewares",
            "src/Arx/models",
            "src/Arx/providers",
            "src/Arx/traits"
        ],
        "psr-4": {
            "Arx\\": "src/Arx/"
        },
        "files" : [
            "src/Arx/core.php"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}
