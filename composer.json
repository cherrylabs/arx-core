    "require": {
        "php": ">=5.3.2",
        "raveren/kint" : "dev-master",
        "laravel/framework" : "4.*",
        "kriswallsmith/assetic": "dev-master",
        "barryvdh/laravel-ide-helper": "*",
        "barryvdh/laravel-debugbar": "dev-master",
        "orchestra/foundation": "2.0.*",
        "orchestra/control": "2.0.*",
        "orchestra/story": "2.0.*",
        "cartalyst/sentry": "2.0.*",
        "way/generators": "*"
    },
    "require-dev": {
