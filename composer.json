{
    "name": "arx/core",
    "type" : "library",
    "description": "Arx core is a boosted web development kit based on Laravel",
    "homepage": "http://www.arx.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Sum",
            "email": "daniel@cherrylabs.net",
            "homepage": "http://www.cherrylabs.net",
